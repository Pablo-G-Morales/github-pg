<%- include('../partials/header', { title }) %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>

<section class="container py-4" style="max-width: 900px;">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 m-0"><%= title %></h2>
    <a href="/catalogos/condiciones-pago" class="btn btn-outline-secondary">
      <i class="fa fa-arrow-left"></i> Volver
    </a>
  </div>

  <form method="post" action="<%= action %>">
    <div class="card">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Nombre <span class="text-danger">*</span></label>
            <input name="nombre" class="form-control" required maxlength="120" value="<%= item?.nombre || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Descripci√≥n</label>
            <textarea name="descripcion" class="form-control" rows="3" maxlength="300"><%= item?.descripcion || '' %></textarea>
          </div>
        </div>
      </div>
      <div class="card-footer d-flex justify-content-end gap-2">
        <a href="/catalogos/condiciones-pago" class="btn btn-secondary">Cancelar</a>
        <button class="btn btn-primary">
          <i class="fa fa-save me-1"></i> Guardar
        </button>
      </div>
    </div>
  </form>
</section>

<%- include('../partials/footer') %>
