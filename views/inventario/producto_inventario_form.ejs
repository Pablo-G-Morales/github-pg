<%- include('../partials/header', { title }) %>

<div class="container my-4">
  <h3>Nuevo inventario</h3>
  <p class="text-muted">Producto: <strong><%= producto.nombre %></strong></p>

  <form method="post" action="/inventario/productos/<%= producto.id %>/inventario/nuevo" class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Proveedor</label>
      <select name="proveedor_id" class="form-select" required>
        <option value="">— Seleccionar —</option>
        <% proveedores.forEach(p => { %>
          <option value="<%= p.id %>" <%= registro?.proveedor_id===p.id?'selected':'' %>><%= p.nombre %></option>
        <% }) %>
      </select>
    </div>

    <div class="col-md-3">
      <label class="form-label">Precio compra (Q)</label>
      <input type="number" name="precio_compra" step="0.01" min="0" class="form-control" value="<%= registro?.precio_compra || '' %>" required>
    </div>

    <div class="col-md-3">
      <label class="form-label">Precio venta (Q)</label>
      <input type="number" name="precio_venta" step="0.01" min="0" class="form-control" value="<%= registro?.precio_venta || '' %>">
    </div>

    <% if (registro) { %>
      <div class="col-md-4">
        <label class="form-label">Fecha vigencia</label>
        <input type="datetime-local" name="fecha_vigencia" class="form-control" value="<%= new Date(registro.fecha_vigencia).toISOString().slice(0,16) %>">
      </div>
    <% } %>

    <div class="col-12 d-flex gap-2">
      <a href="/inventario/productos/<%= producto.id %>/inventario" class="btn btn-outline-secondary">Cancelar</a>
      <button class="btn btn-success">Guardar</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
