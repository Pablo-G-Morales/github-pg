<%- include('../partials/header', { title }) %>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 m-0">Facturas registradas</h2>
    <div class="d-flex gap-2">
      <a href="/compras-v4/autorizar" class="btn btn-outline-secondary">
        <i class="fa fa-arrow-left"></i> Autorizar compras
      </a>
    </div>
  </div>

  <div class="table-responsive">
    <table id="tblFacturas" class="table table-sm table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Compra</th>
          <th>Núm. Factura</th>
          <th>Proveedor</th>
          <th>Bodega</th>
          <th>Fecha compra</th>
          <th>Total</th>
          <th>Forma</th>
          <th>Condición</th>
          <th>Tipo doc.</th>
          <th>Archivo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% (items||[]).forEach(it => { %>
          <tr>
            <td><%= it.id %></td>
            <td>
              <a href="/compras-v2/<%= it.compra_id %>" class="link-primary">#<%= it.compra_id %></a>
            </td>
            <td><%= it.numero_factura || '—' %></td>
            <td><%= it.proveedor_nombre || '—' %></td>
            <td><%= it.bodega_nombre || '—' %></td>
            <td><%= it.fecha_compra ? new Date(it.fecha_compra).toLocaleString() : '—' %></td>
            <td>Q <%= Number(it.total || 0).toFixed(2) %></td>
            <td><%= it.forma_pago_nombre || '—' %></td>
            <td><%= it.condicion_pago_nombre || '—' %></td>
            <td><%= it.tipo_documento_nombre || '—' %></td>
            <td>
              <% if (it.archivo_path) { %>
                <a href="<%= it.archivo_path %>" target="_blank" class="btn btn-sm btn-outline-secondary">
                  <i class="fa fa-file"></i> Ver
                </a>
              <% } else { %>—<% } %>
            </td>
            <td class="text-nowrap">
              <a href="/compras-v4/facturas/<%= it.id %>" class="btn btn-sm btn-info">
                <i class="fa fa-eye"></i> Ver
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
  $(function(){
    $('#tblFacturas').DataTable({
      order: [[0, 'desc']],
      pageLength: 10,
      language:{
        search: "Buscar:",
        lengthMenu: "Mostrar _MENU_ registros",
        info: "_START_–_END_ de _TOTAL_",
        infoEmpty: "0–0 de 0",
        emptyTable: "Sin resultados",
        paginate:{ previous:"Anterior", next:"Siguiente" }
      },
      columnDefs: [
        { targets: 0, width: 70 },
        { targets: [10,11], orderable: false }
      ]
    });
  });
</script>
<%- include('../partials/footer') %>
