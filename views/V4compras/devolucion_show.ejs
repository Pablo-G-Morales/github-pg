<%- include('../partials/header', { title }) %>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 m-0"><%= title %></h2>
    <a href="/compras-v4/devoluciones" class="btn btn-outline-secondary">
      <i class="fa fa-arrow-left"></i> Volver a lista
    </a>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-3">
          <strong>Compra:</strong>
          <a href="/compras-v2/<%= devolucion.compra_id %>">#<%= devolucion.compra_id %></a>
        </div>
        <div class="col-md-3"><strong>Proveedor:</strong> <%= devolucion.proveedor_nombre %></div>
        <div class="col-md-3"><strong>Bodega:</strong> <%= devolucion.bodega_nombre %></div>
        <div class="col-md-3">
          <strong>Fecha compra:</strong>
          <%= devolucion.fecha_compra ? new Date(devolucion.fecha_compra).toLocaleString() : '—' %>
        </div>
        <div class="col-12"><strong>Notas:</strong> <%= devolucion.notas || '—' %></div>
      </div>
    </div>
  </div>

  <div class="table-responsive mb-3">
    <table id="tblDetalleDev" class="table table-sm table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Producto</th>
          <th class="text-end">Cantidad Devuelta</th>
          <th>Motivo</th>
        </tr>
      </thead>
      <tbody>
        <% (detalles||[]).forEach((d, i) => { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= d.producto_nombre %></td>
            <td class="text-end"><%= Number(d.cantidad || 0).toFixed(0) %></td>
            <td><%= d.motivo || '—' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script>
  $(function(){
    $('#tblDetalleDev').DataTable({
      pagingType: 'simple_numbers',  // paginación numérica
      pageLength: 10,
      order: [[0, 'asc']],
      columnDefs: [
        { targets: 0, width: 60 },
        { targets: 2, className: 'text-end' }
      ],
      language: {
        search: "Buscar:",
        lengthMenu: "Mostrar _MENU_ registros",
        info: "_START_–_END_ de _TOTAL_",
        infoEmpty: "0–0 de 0",
        emptyTable: "Sin resultados",
        zeroRecords: "No se encontraron coincidencias",
        paginate: { previous:"Anterior", next:"Siguiente" }
      }
    });
  });
</script>

<%- include('../partials/footer') %>
